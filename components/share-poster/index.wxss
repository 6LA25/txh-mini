/* components/share-poster/index.wxss */
.share-box-fix {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 2;
}
.share-box-fix .close-img {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 1;
}
.share-box-fix .inner-box {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 980rpx;
  width: 100%;
  background: #fff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 32rpx;
}
.share-box-fix .inner-box .title {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.share-box-fix .inner-box .title .icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.share-box-fix .inner-box .title .txt {
  color: #333;
  font-size: 28rpx;
}
.share-box-fix .save-img-box {
  display: flex;
  justify-content: center;
  width: 100%;
}
.share-box-fix .btn-box {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share-box-fix .btn-box .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 610rpx;
  height: 100rpx;
  background: #E32835;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
}