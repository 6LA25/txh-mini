/* components/operate-box/index.wxss */
.btns-box {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  height: 140rpx;
  width: 100%;
  padding: 0 20rpx;
  box-shadow: 0 10rpx 20rpx 0 #9d9d9d;
  box-sizing: border-box;
  z-index: 999;
}
.btns-box .share-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  border: none;
  width: 100rpx;
}
.btns-box .share-box image {
  width: 40rpx;
  height: 40rpx;
}
.btns-box .share-box text {
  color: #333;
  font-size: 24rpx;
}

.btns-box .share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4rpx;
  flex: 1;
  height: 80rpx;
  margin-right: 30rpx;
}

.btns-box .share-btn:last-child {
  margin-right: 0;
}
.im-btn {
  color: #fff;
  background-image: linear-gradient(to right, #F2CE95, #D89640);
}

.agent-user {
  border: 2rpx solid #E32835;
  color: #E32835;
  font-size: 32rpx;
}
.common-user {
  color: #fff;
  background-image: linear-gradient(to right, #FF844C, #FF4C51);
}
.btns-box .share-btn.fxhk-box {
  border: 2rpx solid #F6515D;
  color: #F6515D;
}
