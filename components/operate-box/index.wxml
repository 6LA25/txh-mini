<!-- components/operate-box/index.wxml -->
<view class="btns-box">
  <!-- 经纪人 -->
  <view wx:if="{{sysinfo.agentUser && !inviteCode}}" class="share-btn agent-user" bindtap="handleRecommend">报备客户</view>
  <!-- 联系当前楼盘置业顾问 -->
  <view wx:if="{{sysinfo.agentUser && !inviteCode}}" class="share-btn common-user" bindtap="handleCall">电话咨询</view>
  <view wx:if="{{inviteCode}}" bindtap="handleYuYue" class="share-btn agent-user">预约看房</view>
  <view wx:if="{{inviteCode}}" class="share-btn common-user" style="width: 100%;" bindtap="handleCall">电话咨询</view>

  <!-- 纯游客进入 -->
  <view wx:if="{{!sysinfo.agentUser && !inviteCode}}" class="share-btn common-user" bindtap="handleCallBoss">电话咨询</view>
  <view class="share-btn im-btn" wx:if="{{house.hotlineObject}}" bindtap="handleChat">在线咨询</view>
</view>