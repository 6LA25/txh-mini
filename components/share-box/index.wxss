/* components/share-box/index.wxss */
.share-box {
  position: absolute;
  right: 32rpx;
  top: 32rpx;
  z-index: 999;
  width: 172rpx;
}

button.share-item, view.share-item {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  width: 100%;
  height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid #fff;
  background: rgba(0, 0, 0, 0.2);
  padding: 0;
  font-weight: normal;
}
.share-item:first-child {
  margin-bottom: 24rpx;
}
.icon-img {
  margin-right: 12rpx;
}

.share {
  width: 28rpx;
  height: 28rpx;
}
.pic {
  width: 28rpx;
  height: 24rpx;
}