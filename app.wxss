/**app.wxss**/
.container {
  box-sizing: border-box;
}

.tap-active {
  transform: scale(0.95);
}

view {
  box-sizing: border-box;
}

.no-more-box {
  color: #A8ABB7;
  font-size: 24rpx;
  padding: 32rpx;
  text-align: center;
}

.no-data-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 40rpx;
}

.no-data-box .image {
  width: 320rpx;
  height: 220rpx;
  margin-bottom: 32rpx;
}

.no-data-box .text {
  color: #D3D3D3;
  font-size: 24rpx;
}

.company-intr-box {
  text-align: center;
  padding-bottom: 20rpx;
}

.company-intr-box .title {
  color: #E32835;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.company-intr-box .detail {
  font-size: 22rpx;
  color: #727483;
  text-align: center;
}

.mt20 {
  margin-top: 20rpx;
}