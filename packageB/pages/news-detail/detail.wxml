<view class="news-detail-page" wx:if="{{detail}}">
  <view class="title">{{detail.title}}</view>
  <view class="hint">{{dateFormat.getDate(detail.updatetime)}}</view>
  <view>
     <rich-text nodes="{{detail.content}}"></rich-text>
  </view>
</view>