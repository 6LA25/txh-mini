/* pages/Secondary/pages/chatting/chatting.wxss */
/* 底部输入框 */
page {
  display: flex;
  flex-direction: column;
  background: rgb(250, 249, 249);
  height: 100vh;
}

.chat {
  flex: 1;
  min-height: 0;
}

.chat-footer {
  width: 100%;
  background: #fff;
}

.send-type-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 88rpx;
}

.chat-footer .bottom-box {
  height: 50rpx;
  background: rgb(250, 249, 249);
}

.send-voice-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
}

.send-voice-btn image,
.send-btn image {
  width: 56rpx;
  height: 56rpx;
}

.send-text-box {
  flex: 1;
  min-width: 0;
  padding: 10rpx;
  height: 100%;
}

.send-text-box .input {
  background: rgb(243, 240, 247);
  height: 100%;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  padding: 0 8rpx;
}

.send-text-box .audio-ipt {
  background: rgb(243, 240, 247);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  padding: 0 8rpx;
}

.send-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
}
.send-btn .btn-box {
  background: #E32835;
  color: #fff;
  font-size: 28rpx;
  border-radius: 6rpx;
  padding: 8rpx 12rpx;
}

.select-file-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 100rpx;
  background: #fff;
}

/* 聊天信息展示 */
.chat-list-box {
  border: 1px solid #eee;
  height: 100px;
}

/* 聊天记录展示区 */
.chat-content {
  padding: 20rpx 20rpx 60rpx 20rpx;
}

.load-more {
  font-size: 20rpx;
  color: #aaa;
  text-align: center;
  margin-bottom: 4rpx;
}

.message-item-box {
  margin-bottom: 30rpx;
}

.message-item-box .msg-time {
  color: #aaa;
  font-size: 22rpx;
  text-align: center;
  margin-bottom: 8rpx;
}

.message-item-inner {
  display: flex;
  align-items: center;
}

.chat-head {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
}

.message-detail {
  padding: 16rpx;
  max-width: 70%;
  word-break: break-all;
  border-radius: 8rpx;
}

.message-item-inner {
  display: flex;
  align-items: center;
}

.message-item-inner.msg-in .chat-head {
  margin-right: 8rpx;
  order: 1;
}

.message-item-inner.msg-in .message-detail {
  order: 2;
  background: #f2f5f7;
}

.message-item-inner.msg-out {
  justify-content: flex-end;
}

.message-item-inner.msg-out .chat-head {
  margin-left: 8rpx;
  order: 2;
}

.message-item-inner.msg-out .message-detail {
  order: 1;
  background: #cce2ff;
}