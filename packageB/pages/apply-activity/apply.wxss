/* packageB/pages/apply-activity/apply.wxss */
.apply-activity-page {
  position: relative;
  width: 100vw;
  height: 100vh;
}

.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.btn-box {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 96rpx;
  padding: 0 10rpx;
  z-index: 11;
}

.btn-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 0 10rpx;
}

.btn-item .inner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  background: #fff;
  color: #E32835;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  font-weight: normal;
}