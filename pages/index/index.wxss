/**index.wxss**/
page {
  display: 100vw;
  height: 100vh;
}

.home-page {
  position: relative;
  padding: 300rpx 0 80px 0;
}
/* 导航 */
.ax-public-navigation-box {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  width: 100%;
}
.navi-text-box {
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 40rpx;
  font-family: PingFangSC, PingFangSC-Semibold;
  font-weight: 600;
  color: #ffffff;
  padding-left: 24rpx;
}


/* 搜索框 */

.search-box {
  display: flex;
  position: fixed;
  /* top: 0; */
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: 110rpx;
  /* background: transparent; */
  padding: 0 28rpx;
  box-sizing: border-box;
  z-index: 999;
}

.search-ipt-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 20rpx;
  width: 100%;
}

.msg-icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  /* width: 50rpx; */
  margin-left: 28rpx;
}

.msg-icon .bell-img {
  width: 48rpx;
  height: 42rpx;
}

.search-box .msg-icon .point {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 14rpx;
  height: 14rpx;
  border: 2rpx solid #fff;
  background: #E32835;
  border-radius: 50%;
}

.search-ipt-box .search-address {
  min-width: 60rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-right: 1rpx solid #f6f6f6;
  margin-right: 20rpx;
  padding-right: 20rpx;
  color: #6c6c70;
  font-weight: 400;
}

.search-ipt-box .search-address .icon-img {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}

.search-ipt-box .search-input {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #b8bfc3;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

/* 首页 */
.top-bg {
  position: absolute;
  top: -2rpx;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 364rpx;
}

.home-content {
  background: #fff;
  padding: 24rpx;
  border-radius: 32rpx 32rpx 0 0;
}

.home-swiper-box {
  margin-bottom: 32rpx;
}

/* 通知公告 */

.notice-box {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  box-shadow: 0px 0px 16rpx 0px rgba(184,191,195,0.25);
  margin-bottom: 16px;
}

.notice-box .img-box {
  display: flex;
  align-items: center;
}

.notice-box .img-box image {
  width: 132rpx;
  height: 38rpx;
}

.notice-box .img-box text {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  margin: 0 12rpx;
  background: #000;
}

