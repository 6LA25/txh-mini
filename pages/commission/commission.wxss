/* pages/commission/commission.wxss */

.commission-collect-box {
  display: flex;
  align-items: center;
  height: 180rpx;
  background: #e32835;
  padding: 0 32rpx;
}

.collect-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50%;
}

.collect-item .text {
  color: #eee;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.collect-item .num {
  color: #fff;
  font-size: 40rpx;
}

.filter-box {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #F6F6F6;
}

.filter-box .filter-item {
  position: relative;
  display: flex;
  justify-content: center;
  width: 33.3%;
  color: #333333;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.filter-box .filter-item.active {
  color: #e32835;
}

.filter-box .filter-item .line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
  width: 44rpx;
  height: 4rpx;
  background: #e32835;
}

.data-list-box {
  padding: 32rpx;
}

.data-list-box .data-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  /* padding: 100rpx 0; */
  border-bottom: 2rpx solid #F6F6F6;
}

.data-list-box .data-item .data-detail {
  flex: 1;
  padding-right: 20rpx;
}

.data-list-box .data-item .data-detail .name {
  word-break: break-all;
  font-size: 30rpx;
  color: #333;
}

.data-list-box .data-item .data-detail .time {
  color: #A8ABB7;
  margin-top: 8rpx;
  font-size: 26rpx;
}

.data-list-box .data-item .num {
  min-width: 180rpx;
  color: #333;
  text-align: right;
}

.data-list-box .data-item .num.active {
  color: #e32835;
}