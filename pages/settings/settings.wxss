/* pages/settings/settings.wxss */
.settings-page {
  width: 100%;
  height: 100vh;
  background: #F7F8F8;
}
.top-box {
  padding: 0 30rpx;
  background: #fff;
  margin-bottom: 16rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0; 
  color: #333333;
  font-size: 32rpx;
}

.item:first-child {
  border-bottom: 2rpx solid #F6F6F6;
}

.arrow-img {
  width: 14rpx;
  height: 24rpx;
}

.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #E32835;
  font-size: 32rpx;
  padding: 32rpx 0;
  background: #fff;
}