/* pages/customer-schedule/customer-schedule.wxss */
.customer-schedule-page {}

.top-box {
  position: relative;
  background: #E32835;
  height: 220rpx;
  padding: 0 32rpx;
}

.top-box .container {
  position: absolute;
  left: 0;
  bottom: -56rpx;
  z-index: 1;
  width: 100%;
  padding: 0 32rpx;
}

.top-box .container .inner-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 10rpx 0 #eee;
  color: #333;
}

.top-box .container .inner-box .head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.top-box .container .inner-box .mid-box {
  flex: 1;
  margin: 0 32rpx;
  color: #333;
}

.top-box .container .inner-box .mid-box .name {
  font-size: 34rpx;
  word-break: break-all;
}

.top-box .container .inner-box .mid-box .num {
  font-size: 28rpx;
  margin: 12rpx 0;
}

.top-box .container .inner-box .mid-box .house {
  font-size: 28rpx;
}

.top-box .container .inner-box .rg-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
}

.step-box {
  padding: 108rpx 32rpx 8rpx 32rpx;
  background: #fff;
}

.step-box .step-item {
  display: flex;
  color: #333;
}

.step-box .step-item .step-lf {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 32rpx;
}

.step-lf .circle-box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20rpx;
  height: 20rpx;
  background: #E9E9E9;
  border-radius: 50%;
}

.step-lf .circle-box .inner {
  width: 8rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 50%;
}

.step-lf .circle-box.active {
  background: #F6515D;
}

.step-lf .line-box {
  flex: 1;
  width: 4rpx;
  background: #F6515D;
}

.step-box .step-item .step-rg {
  flex: 1;
  padding-bottom: 26rpx;
  color: #333;
  padding-left: 16rpx;
}

.step-box .step-item .step-rg .status {
  font-size: 32rpx;
  margin-top: -10rpx;
}

.step-box .step-item .step-rg .remark {
  margin: 12rpx 0;
  padding: 10rpx;
  word-break: break-all;
  background: #F7F8F8;
  font-size: 28rpx;
  border-radius: 4rpx;
}

.step-box .step-item .step-rg .time {
  font-size: 26rpx;
}

.devide-box {
  width: 100%;
  height: 16rpx;
  background: #F7F8F8;
}

.remark-box {
  padding: 32rpx;
  background: #fff;
}
.remark-box .title {
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.input-placeholder {
  color: #B8BFC3;
}
.remark-box .input {
  border: 2rpx solid #F7F8F8;
  padding: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #F7F8F8;
  border-radius: 8rpx;
}
.remark-box .remark-item {
  font-size: 26rpx;
  color: #333;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #F6F6F6;
}
.remark-item .item-a {
  margin-bottom: 16rpx;
}
.remark-item .item-b {
  word-break: break-all;
}