/* pages/Secondary/pages/withdraw-deposit/index.wxss */
.withdraw-deposit-page {
  padding: 32rpx 32rpx 140rpx 32rpx;
}
.withdraw-item {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
}

.checks-box checkbox .wx-checkbox-input{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}
.checks-box checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: #F6515D;
  background: #F6515D;
  color: #fff;
}
.checks-box {
  width: 32rpx;
}

.num-box {
  width: 160rpx;
  text-align: right;
}
.detail-box {
  flex: 1;
  padding: 0 24rpx;
}
.detail-box .name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
}
.detail-box .time {
  font-size: 26rpx;
  color: #A8ABB7;
}
.fixed-btn-box {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 140rpx;
  background: #fff;
  padding: 0 32rpx;
}
.fixed-btn-box .checks-box {
  display: flex;
  align-items: center;
  flex: 1;
  font-size: 28rpx;
  color: #999999;
}
.fixed-btn-box .checks-box .txt {
  margin-left: 20rpx;
}
.money-box {
  flex: 2;
  font-size: 32rpx;
  color: #333;
}
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  width: 230rpx;
  height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  background-image: linear-gradient(to right, #FF844C, #FF4C51);
}

.no-data-box {
  margin-top: 80rpx;
}