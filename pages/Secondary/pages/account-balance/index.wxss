/* pages/Secondary/pages/account-balance/index.js.wxss */
.top-box {
  position: relative;
  display: flex;
  width: 100%;
  height: 284rpx;
  padding: 0 32rpx;
}

.account-balance-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.account-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50%;
  height: 100%;
  color: #fff;
}
.account-item .title {
  font-size: 28rpx;
  margin-bottom: 24rpx;
}
.account-item .text {
  font-size: 56rpx;
  font-weight: 500;
}

.detail-operate-box {
  padding: 50rpx 32rpx;
}

.detail-operate-box .tixian-btn-box {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  background: #E32835;
  height: 90rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.commission-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  color: #333333;
  font-size: 30rpx;
}

.commission-item .lf {
  display: flex;
  align-items: center;
}
.commission-item .lf .icon-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 32rpx;
}
.arrow-img {
  width: 12rpx;
  height: 20rpx;
}