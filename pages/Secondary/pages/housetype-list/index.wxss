/* pages/Secondary/pages/housetype-list/index.wxss */
.housetype-list-page{
  background: #F7F8F8;
}
.scroll-box {
  border-bottom: 2rpx solid #F6F6F6;
}
.filter-box {
  height: 100rpx;
  text-align: center;
  width: 100%;
  padding: 0 32rpx;
  white-space: nowrap;
  overflow: auto;
  background: #fff;
}
.filter-item-box {
  position: relative;
  display: inline-block;
  vertical-align: top;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #333333;
  font-size: 32rpx;
}
.filter-item-box.active {
  color: #E32835;
  font-weight: bold;
}
.filter-item-box:not(:last-child) {
  margin-right: 44rpx;
}
.filter-item-box .line {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
  width: 40rpx;
  height: 4rpx;
  background: #E32835;
}

.housetype-list-box .house-type-box {
  padding: 32rpx;
  margin-bottom: 12rpx;
  background: #fff;
}
.housetype-list-box .house-type-box .name {
  color: #333333;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
}
.housetype-list-box .house-type-box .floorage {
  color: #747D8D;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.detail-box {
  display: flex;
}
.img-box {
  position: relative;
  width: 440rpx;
  height: 360rpx;
  border: 2rpx solid #EFF1F5;
  border-radius: 8rpx;
}
.img-box .img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.tag-box {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  width: 64rpx;
  height: 36rpx;
  border-radius: 4rpx;
  background-image: linear-gradient(135deg, #FF906D 0%, #FB453F 100%);
}
.text-box {
  flex: 1;
  padding: 20rpx 0 0 32rpx;
  overflow: hidden;
}
.text-box .price {
  font-size: 34rpx;
  color: #E32835;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.text-box .hint {
  color: #333333;
  font-size: 32rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin-bottom: 8rpx;
}
.tags {
  display: flex;
  flex-direction: column;
}
.tags .tag-item {
  max-width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EFF1F5;
  border-radius: 6rpx;
  color: #989DAB;
  font-size: 20rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}
.tag-item:first-child {
  background-image: linear-gradient(135deg, #FF906D 0%, #FB453F 100%);
  color: #fff;
}