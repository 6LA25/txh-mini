/* pages/house-states/house-states.wxss */
.house-states-page {
  width: 100vw;
  min-height: 100vh;
  background: #F7F8F8;
}
.filter-box {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  background: #fff;
}
.filter-box .filter-item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #747D8D;
  background: #EFF1F5;
  border-radius: 8rpx;
  width: 152rpx;
  height: 56rpx;
}
.filter-box .filter-item.active {
  background: #E32835;
  color: #FFFFFF;
}
.step-box {
  padding: 0 32rpx 32rpx 32rpx;
  background: #fff;
}

.step-box .step-item {
  display: flex;
  color: #333;
}

.step-box .step-item .step-lf {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 32rpx;
  padding-top: 8rpx;
}

.step-lf .circle-box {
  width: 18rpx;
  height: 18rpx;
  background: #E32835;
  border-radius: 50%;
}

.step-lf .line-box {
  flex: 1;
  width: 2rpx;
  background: #EFF1F5;
}

.step-box .step-item .step-rg {
  flex: 1;
  padding-bottom: 40rpx;
  color: #333;
  padding-left: 16rpx;
}

.step-box .step-item .step-rg .status {
  color: #747D8D;
  font-size: 24rpx;
}

.step-box .step-item .step-rg .remark {
  padding: 32rpx;
  word-break: break-all;
  background: #EFF1F5;
  font-size: 28rpx;
  border-radius: 16rpx;
  color: #747D8D;
}

.step-box .step-item .step-rg .time {
  margin: 14rpx 0 12rpx 0;
  font-size: 32rpx;
  color: #333333;
  max-width: 610rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}